			{
				thumbImgMenu = new ContextMenu();
				
				thumbImgMenuItem1 = new ContextMenuItem(Message.L_OPEN_DEFAULT_WEB_BROWSER);
				thumbImgMenuItem1.addEventListener(ContextMenuEvent.MENU_ITEM_SELECT, button_goToWebClicked);
				
